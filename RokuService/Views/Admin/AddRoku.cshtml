@model RokuService.Models.AddRokuModel

@{
    ViewBag.Title = "AddRoku";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Add Roku</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label class="control-label">IP Address</label>
                @Html.EditorFor(m => m.IPAddress)
                @Html.ValidationMessageFor(m => m.IPAddress);
            </div>
            <div class="form-group">
                <label class="control-label">Name (optional)</label>
                @Html.EditorFor(m => m.Name)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        }
    </div>
</div>

<div>
    <a href="@Url.Action("Index")">Back to List</a>
</div>

